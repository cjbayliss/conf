# -*- mode: scheme -*-

# Local Variables:
# comment-start: "#"
# End:

(default-image
  (width 2400)
  (height 1800)
  (unit pixels)
  (xresolution 300)
  (yresolution 300)
  (resolution-unit inches)
  (image-type rgb)
  (precision u16-linear)
  (color-managed yes)
  (color-profile NULL)
  (fill-type background))

(default-view
  (padding-mode custom)
  (padding-color (color-rgb 0.80 0.80 0.80))
  (show-statusbar no)
  (show-rulers no)
  (show-scrollbars no))

(default-fullscreen-view
  (padding-mode custom)
  (padding-color (color-rgb 0.80 0.80 0.80))
  (show-statusbar no)
  (show-rulers no)
  (show-scrollbars no))

(toolbox-color-area no)
(theme "Light")
(icon-theme "Symbolic-Inverted")
(icon-size small)
