(tool-preset-path "${gimp_dir}/tool-presets")

(default-image
  (width 4800)
  (height 3200)
  (unit pixels)
  (xresolution 300)
  (yresolution 300)
  (resolution-unit inches)
  (image-type rgb)
  (precision u16-linear)
  (color-managed yes)
  (color-profile NULL)
  (fill-type background))

(default-view
  (padding-mode light-check)
  (show-statusbar no)
  (show-rulers no)
  (show-scrollbars no))

(default-fullscreen-view
  (padding-mode light-check)
  (show-statusbar no)
  (show-rulers no)
  (show-scrollbars no))

(toolbox-color-area no)
(theme "System")
(icon-theme "Symbolic-Inverted-High-Contrast")
(icon-size small)
