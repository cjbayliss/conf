! Set the curser size
Xcursor.size:  36
Xcursor.theme: Adwaita

! Set the dpi, and other font stuff
Xft.dpi:        144
Xft.autohint:   0
Xft.lcdfilter:  lcddefault
Xft.hintstyle:  hintslight
Xft.hinting:    1
Xft.antialias:  1

*renderFont: true
*faceName: xft:Iosevka Fixed:size=11

! dark background
*.foreground:   #ffffff
*.background:   #000000
*.cursorColor:  #ffffff
*.cursorBlink: true

! emacs
emacs.background: black
emacs.fullscreen: fullboth
emacs.menuBar: off
emacs.toolBar: -1
emacs.verticalScrollBars: off
