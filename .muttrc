source ~/.mutt/muttrc.colors

set smart_wrap=yes

set editor='vim'
set my_name='Real Name'

set imap_user=user@example.com
set imap_pass='password'
set folder=imaps://imap.gmail.com/
set spoolfile=+INBOX
mailboxes =INBOX

# Store message headers locally to speed things up.
# If hcache is a folder, Mutt will create sub cache folders for each account
# which may speeds things up even more.
set header_cache = ~/.cache/mutt

# Store messages locally to speed things up, like searching message bodies.
# Can be the same folder as header_cache.
# This will cost important disk usage according to your e-mail amount.
set message_cachedir = "~/.cache/mutt"

# Allow Mutt to open new imap connection automatically.
unset imap_passive

# Keep IMAP connection alive by polling intermittently (time in seconds).
set imap_keepalive = 300

# How often to check for new mail (time in seconds).
set mail_check = 120

set record = +Sent
unset record

set my_pass='password'
set my_user=user@example.com

set realname='Real Name'
set from=user@example.com
set use_from=yes

set smtp_url=smtps://$my_user:$my_pass@smtp.gmail.com
set ssl_force_tls=yes

auto_view text/html                                      # view html automatically
alternative_order text/plain text/enriched text/html     # save html for last
