! Set the curser size
Xcursor.size:  24

! Set the dpi, and other font stuff
Xft.dpi:        96
Xft.autohint:   0
Xft.lcdfilter:  lcddefault
Xft.hintstyle:  hintslight
Xft.hinting:    1
Xft.antialias:  1

*renderFont: true
*faceName: xft:Liberation Mono:size=11

! dark background
*.foreground:   #ffffff
*.background:   #000000
*.cursorColor:  #ffffff
*.cursorBlink: true
